  
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Plan An Event</h1>
      <%= form_with model: @event, local: true, class: "needs-validation", novalidate: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">
            Please provide a title.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control text-input", rows: 5, required: true %>
          <div class="invalid-feedback">
            Please provide a description.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :Upload_Image, class: "form-label" %>
          <%= f.file_field :images, class: "form-control text-input", multiple: true %>
          <div class="invalid-feedback">
            Please provide an image URL.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :event_date, class: "form-label" %>
          <%= f.date_field :event_date, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">
            Please provide an event date.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :location, class: "form-label" %>
          <%= f.text_field :location, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">
            Please provide a location.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :number_of_people, class: "form-label" %>
          <%= f.number_field :number_of_people, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">
            Please provide the number of people.
          </div>
        </div>
      </div>
      <div class="button-styling">
        <%= f.submit "Plan Event", class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>
</div>
