<div class="row card-container">
  <% @events.each do |event| %>
    <div class="card card-styling">
      <div id="title-card">
        <h5 class="card-title"><%= event.title %></h5>
      </div>
      <% event.images.each do |image| %>
        <%= cl_image_tag image.key%>
      <% end %>
      <div class="card-body"></div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Author: <%= event.user.first_name %></li>
        <div id="card-date-comment">
          <li class="list-group-item">Published: <%= event.created_at.strftime("%B %d, %Y") %> </li>
        </div>
        <div id="card-date-comment" class="d-flex justify-content-between align-items-center w-100">
          <li class="list-group-item border-0">
            <span class="badge badge-pill badge-primary" style="background-color: #007bff; color: white; border-radius: 20px;">Event</span>
          </li>
          <li class="list-group-item border-0 d-flex align-items-center" style="text-decoration: none;">
            <span><%= rand(1..15) %> <i class="fa-solid fa-person"></i></span>
          </li>
        </div>
      </ul>
      <div class="card-body d-flex justify-content-center">
        <%= link_to 'Show More Details', event_path(event), class: 'btn btn-primary', id: "show-button" %>
      </div>
    </div>
  <% end %>
</div>
